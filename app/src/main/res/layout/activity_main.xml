<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.michael.test.MainActivity">

    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/et_main_display"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:digits="01234567890."
        android:inputType="numberDecimal"
        android:gravity="right"
        android:layout_below="@+id/tv_first_operand"
        android:cursorVisible="true"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_first_operand"
        android:gravity="right"/>


    <LinearLayout
        android:id="@+id/ll_main_container_zero"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_main_container_one"
        android:orientation="horizontal">

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_main_zero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:text="0" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_main_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="c" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_main_multiply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="*" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_main_container_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_main_container_four"
        android:orientation="horizontal">

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_main_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="1" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_main_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="2" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_main_three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="3" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_main_devide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_main_container_four"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_main_container_seven"
        android:orientation="horizontal">

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_main_four"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="4" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_main_five"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="5" />


        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_main_six"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="6" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_main_minus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_main_container_seven"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_main_display"
        android:orientation="horizontal">

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_main_seven"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_main_eight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_main_nine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9" />


        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_main_plus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+" />
    </LinearLayout>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_main_equals"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_main_container_zero"
        android:text="=" />

</RelativeLayout>

